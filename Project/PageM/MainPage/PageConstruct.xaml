<Page x:Class="Project.PageM.MainPage.PageConstruct"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Project.PageM.MainPage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageConstruct">


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="250"/>
        </Grid.ColumnDefinitions>
        <StackPanel
                Margin="10,10,10,10">
            <DockPanel
                    Margin="5">
                <TextBlock
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        ><Run Text="Введите ширин"/><Run Language="ru-ru" Text="у"/><Run Text=" изделия: "/></TextBlock>
                <TextBox
                        VerticalContentAlignment="Center"
                        Height="30"
                        Name="txtbox"
                        Text="{Binding ElementName=slider, Path=Value, UpdateSourceTrigger=PropertyChanged}"
                        Width="150"/>
            </DockPanel>
            <Slider
                    x:Name="slider"
                    IsSelectionRangeEnabled="True"
                    VerticalAlignment="Center"
                    Value="5"
                    Minimum="0"
                    Maximum="200"
                    IsSnapToTickEnabled="True"
                    Width="350"
                    SelectionEnd="{Binding ElementName=slider, Path=Value}"/>
            <DockPanel
                    Margin="5">
                <TextBlock
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        ><Run Text="Введите "/><Run Language="ru-ru" Text="высоту"/><Run Text=" изделия: "/></TextBlock>
                <TextBox
                        VerticalContentAlignment="Center"
                        Height="30"
                        Name="txtbox1"
                        Text="{Binding ElementName=slider1, Path=Value, UpdateSourceTrigger=PropertyChanged}"
                        Width="150"/>
            </DockPanel>
            <Slider
                    x:Name="slider1"
                    IsSelectionRangeEnabled="True"
                    VerticalAlignment="Center"
                    Value="5"
                    Minimum="0"
                    Maximum="200"
                    IsSnapToTickEnabled="True"
                    Width="350"
                    SelectionEnd="{Binding ElementName=slider, Path=Value}"/>
        </StackPanel>
        <Border BorderThickness="3"  
                BorderBrush="LightBlue"  
                PreviewDrop="Border_Drop"
                Background="#696969"
                AllowDrop="True"
                Grid.Column="1">
        </Border>
    </Grid>
</Page>
