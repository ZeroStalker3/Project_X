<Page x:Class="Project.PageM.MainPage.PageConstruct"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Project.PageM.MainPage"
      mc:Ignorable="d" 
      Title="Конструктор">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Image Name="DroppedImage" Width="400" Grid.Column="1" Grid.ColumnSpan="2"
               Grid.Row="1"
               Margin="0 0 100 10"
               Height="400" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image.RenderTransform>
                <TransformGroup>
                    <RotateTransform x:Name="ImageRotateTransform" CenterX="200" CenterY="200" />
                    <ScaleTransform x:Name="ImageScaleTransform" CenterX="200" CenterY="200" />
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <StackPanel
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Grid.Row="0">
            <TextBlock
            Text="Для поворачивания картинки: "
            FontSize="14pt"
            Grid.Column="1"
                Margin="0 10 0 5"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"/>
            <Slider Name="RotationSlider" Minimum="0" 
                    Margin="0 5 0 10"
                    Maximum="360" Grid.Column="1" ValueChanged="RotationSlider_ValueChanged" 
                Width="200" Height="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Rectangle Name="DropTargetRectangle" Width="150" Height="150" 
                        Margin="0 0 30 0" 
                       Fill="LightGray"
                   HorizontalAlignment="Right" VerticalAlignment="Top"
                   AllowDrop="True"
                   Drop="DropTargetRectangle_Drop"
                   DragEnter="DropTargetRectangle_DragEnter"
                   DragLeave="DropTargetRectangle_DragLeave"
                   DragOver="DropTargetRectangle_DragOver">
            </Rectangle>
        </StackPanel>

        <StackPanel
                Margin="10,10,10,10" Grid.RowSpan="2">
            <DockPanel
                    Margin="5">
                <TextBlock
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                    FontSize="14pt"
                        ><Run Text="Введите ширин"/><Run Language="ru-ru" Text="у"/><Run Text=" фурнитуры: "/></TextBlock>
                <TextBox
                    FontSize="14pt"
                        VerticalContentAlignment="Center"
                        Height="30"
                        Name="txtbox"
                        Text="{Binding ElementName=slider, Path=Value, UpdateSourceTrigger=PropertyChanged}"
                        Width="150"/>
            </DockPanel>
            <Slider
                    x:Name="slider"
                    IsSelectionRangeEnabled="True"
                    VerticalAlignment="Center"
                    Value="0.2"
                    Minimum="0.1"
                    Maximum="5"
                    TickFrequency="0.1"
                    IsSnapToTickEnabled="True"
                    ValueChanged="slider_ValueChanged"
                    Width="350"
                    SelectionEnd="{Binding ElementName=slider, Path=Value}"/>
            <DockPanel
                    Margin="5">
                <TextBlock
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                    FontSize="14pt"
                        ><Run Text="Введите "/><Run Language="ru-ru" Text="высоту"/><Run Text=" фурнитуры: "/></TextBlock>
                <TextBox
                        VerticalContentAlignment="Center"
                        Height="30"
                    FontSize="14pt"
                        Name="txtbox1"
                        Text="{Binding ElementName=slider1, Path=Value, UpdateSourceTrigger=PropertyChanged}"
                        Width="150"/>
            </DockPanel>
            <Slider
                    x:Name="slider1"
                    IsSelectionRangeEnabled="True"
                    VerticalAlignment="Center"
                    Value="0.2"
                    Minimum="0.1"
                    Maximum="5"
                    ValueChanged="slider1_ValueChanged"
                    TickFrequency="0.1"
                    IsSnapToTickEnabled="True"
                    Width="350"
                    SelectionEnd="{Binding ElementName=slider1, Path=Value}"/>
            <DockPanel
                Margin="5">
                <TextBlock
                    Text="Выбор Ткани: "
                    FontSize="14pt"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"/>
                <ComboBox 
                    HorizontalAlignment="Right"
                    Width="170"/>
            </DockPanel>
            <DockPanel
                Margin="5">
                <TextBlock
                    Text="Выбор Оконтовки: "
                    FontSize="14pt"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"/>
                <ComboBox 
                    HorizontalAlignment="Right"
                    Width="170"/>
            </DockPanel>
            <DockPanel
                Margin="5">
                <TextBlock
                    Text="Выбор Размещения: "
                    FontSize="14pt"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"/>
                <ComboBox 
                    HorizontalAlignment="Right"
                    Width="170"/>
            </DockPanel>
        </StackPanel>
    </Grid>
</Page>
