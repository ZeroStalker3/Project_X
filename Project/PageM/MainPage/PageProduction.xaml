<Page x:Class="Project.PageM.MainPage.PageProduction"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Project.PageM.MainPage"
      mc:Ignorable="d" 
      Title="Производство изделий">

    <Grid
        HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel>
            <TextBox Name="productTextBox"   Width="300" Margin="10 10 10 0"/>
            <TextBox Name="quantityTextBox"  Width="300" Margin="10"/>
            <TextBox Name="usedMaterialsTextBox"    Width="300" Margin="10 0 10 10"/>
            <Button Content="Сохранить производство" HorizontalAlignment="Right" Width="150" Height="30" Click="SaveProduction"/>
        </StackPanel>
    </Grid>
</Page>
